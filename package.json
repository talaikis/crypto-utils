{
  "name": "@talaikis/crypto-utils",
  "version": "0.1.1",
  "description": "React Native Crypto, etc. utils",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-utils-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talaikis/crypto-utils.git"
  },
  "author": "Tadas Talaikis <tadas@nordlet.com> (https://github.com/talaikis)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talaikis/crypto-utils/issues"
  },
  "homepage": "https://github.com/talaikis/crypto-utils#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.0.2",
    "@evilmartians/lefthook": "1.5.0",
    "@react-native/eslint-config": "0.73.1",
    "@release-it/conventional-changelog": "5.0.0",
    "@types/jest": "29.5.5",
    "@types/react": "18.2.44",
    "commitlint": "17.0.2",
    "del-cli": "5.1.0",
    "eslint": "8.51.0",
    "jest": "29.7.0",
    "react": "18.2.0",
    "react-native": "0.73.5",
    "react-native-builder-bob": "0.20.0",
    "release-it": "15.0.0",
    "turbo": "1.10.7",
    "typescript": "5.2.2"
  },
  "resolutions": {
    "@types/react": "18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
